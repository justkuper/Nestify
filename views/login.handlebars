<h3 class="center-align">Login</h3>

    <div class="row">
        <form class="col s12">

            <div class="row">
                <div class="input-field col s4">
                  <input id="username" type="text" class="validate">
                  <label for="username">Username</label>
                </div>
              </div>
         
          <div class="row">
            <div class="input-field col s4">
              <input id="password" type="password" class="validate">
              <label for="password">Password</label>
            </div>
          </div>

          <div class="row">
            <div class="col s4">
                <div class="selection">
                    <label>
                  <input class="with-gap" name="group3" type="radio" value="Ordinary User" checked >
                  <span>Ordinary User</span>
                </label>
              
                <label>
                  <input class="with-gap" name="group3" type="radio" value="Provider"/>
                  <span>Provider</span>
                </label>
                </div>
            </div>
          </div>
          
            <button id="loginBtn" class="btn waves-effect waves-light" type="submit" name="action">Login
                <i class="material-icons right">account_circle</i>
            </button>
             
        </form>
      </div>
  <script src="/js/login.js"></script>
      


        