<h1 class="center-align">Profile</h1>

<div class="row">
    <div class="col s10">

        <div class="row">
            <div class="col s4">
                <label for="username">Username</label>
                {{#if isUser}}
                    {{user.username}} 
                {{else}}
                    {{provider.username}}
                {{/if}}
            </div>
        </div>

        <div class="row">
            <div class="col s4">
                <label for="email">Email</label>
                {{#if isUser}}
                    {{user.email}} 
                {{else}}
                    {{provider.email}}
                {{/if}}
            </div>
        </div>

            <div class="row">
                <div class="col s4">
                    <label for="profile">Profile</label>
                    {{#if isUser}}
                   <input id="newprofile" type="text" placeholder="{{user.profile}}"> 
                    {{else}}
                    <input id="newprofile" type="text" placeholder="{{provider.profile}}">
                    {{/if}}
                </div>
            </div>

            <div class="row">
                <div class="col s4">
                    <label for="profile">Zipcode</label>
                    {{#if isUser}}
                   <input id="newzipcode" type="text" placeholder="{{user.zipcode}}"> 
                    {{else}}
                    <input id="newzipcode" type="text" placeholder="{{provider.zipcode}}">
                    {{/if}}
                </div>
            </div>
            {{#if isUser}}
            <button id="updatebtn" class="btn waves-effect waves-light" type="submit" name="action" data-uid="{{user.id}}" data-usertype="user">Update
                                <i class="material-icons right">send</i>
             {{else}}
             <button id="updatebtn" class="btn waves-effect waves-light" type="submit" name="action" data-uid="{{provider.id}}" data-usertype="provider">Update
                                <i class="material-icons right">send</i>
             {{/if}}
    </div>
</div>
<script src="/js/profile.js"></script>