<h1 class="center-align">Request Form</h1>

<div class="row">
    <div class="col s10">

        <div class="row">
            <div class="col s6">
                {{#if createATicket}}
                    <label for="description">Description:</label>
                    <input type="text" placeholder="Tell us what you need">
                    <label for="date">Date</label>
                    <input type="date" placeholder="When do you need it?">
                    <label for="pay">Pay</label>
                    <input type="text" placeholder="How much are you willing to pay?">
                    
                {{else}}

                    <label for="description">Description:</label>
                    <p>{{ticket.description}}</p>
                    <label for="date">Date</label>
                    <p>{{ticket.date}}</p>
                    <label for="pay">Pay</label>
                    <p>{{ticket.pay}}</p>
                    {{#if acceptTicketHandler}}
                    <label for="provider">Provider's Information:</label>
                    <p>{{Provider.username}} {{Provider.email}}</p>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                        <i class="material-icons right">send</i>
                        {{/if}}
                    {{#if isProvider}}
                    <label for="distance">Distance</label>
                    <p>{{distance}}</p>
                        {{#if noProvider}}
                            <label for="email">Email</label>
                            <p>{{ticket.User.email}}</p>
                            <label for="button"></label>
                            <button id="acceptbtn" class="btn waves-effect waves-light" type="submit" name="action" data-uid="{{uid}}">Accept Request
                                <i class="material-icons right">send</i>
                        {{else}}
                            <p>This ticket is already claimed by another provider.</p>
                        {{/if}}
                    {{/if}}
                {{/if}}


            </div>
        </div>
    </div>
</div>
<script src="/js/ticket"></script>